<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/FoodItemImage"
        android:layout_width="80dp"
        android:layout_marginRight="20dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/titleText"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Blue Wilderness."
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/priceText"
                android:text="Price: 2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/quantityAvailable"
                android:text="6 available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/removeImage"
                android:layout_width="50dp"
                android:background="@drawable/ic_action_remove"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="50dp" />

        </RelativeLayout>



        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="21dp"
            android:id="@+id/removeFromCartBtn"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="0dp">

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="Remove."
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>